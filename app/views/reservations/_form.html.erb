<%= form_for([@accommodation, @accommodation.reservations.new]) do |f| %>
  <%= f.text_field :start_date %>
  <%= f.text_field :end_date %>
  <%= f.text_field :accommodation_id, value: @accommodation.id %>
  <%= f.text_field :price, value: @accommodation.price %>

  <br/>
  <%= f.submit "Book Now", class: "btn btn-normal btn-block" %>

<% end %>

<script>
 $(function() {
   $('#reservation_start_date').datepicker({
     dateFormat: 'dd-mm-yy'
   });
   $('#reservation_end_date').datepicker({
     dateFormat: 'dd-mm-yy'
   });
  });
</script>
