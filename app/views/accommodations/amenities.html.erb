<div class="row">

  <div class="col-md-3"
  <%= render 'accommodation_menu' %>

  </div>

  <div class="col-md-9">
    <div class="panel panel-default">

      <div class="panel-heading">
        Amenities
      </div>

      <div class="panel-body">
        <div class="container">
          <%= form_for @accommodation do |f| %>

          <div class="row form-group">
            <div class="colw-md-4">
              <%= f.check_box :is_tv %> TV
            </div>

            <div class="colw-md-4">
              <%= f.check_box :is_kitchen %> Kitchen
            </div>

            <div class="colw-md-4">
              <%= f.check_box :is_internet %> Internet
            </div>
          </div>

          <div class="row form-group">
            <div class="colw-md-4">
              <%= f.check_box :is_heating %> Heating
            </div>

            <div class="colw-md-4">
              <%= f.check_box :is_air %> Air Conditioning
            </div>

          </div>
          <br></br>

          <div class="text-center">
            <%= f.submit "Save", class: "btn btn-form" %>

          </div>

          <%= end %>
        </div>
      </div>

    </div>
  </div>

</div>
