<ul class="sidebar-list">
<li class="sidebar-item">
  <%= link_to "Listing", listing_accommodation_path, class: "sidebar-link active" %>
  <span class="pull-right text-babu"><i class="fa fa-check"></i></span>
</li>
<li class="sidebar-item">
  <%= link_to "Pricing", pricing_accommodation_path, class: "sidebar-link active" %>
  <% if !@accommodation.price.blank? %>
    <span class="pull-right text-babu"><i class="fa fa-check"></i></span>
  <% end %>
</li>
<li class="sidebar-item">
  <%= link_to "Description", description_accommodation_path, class: "sidebar-link active" %>
  <% if !@accommodation.listing_name.blank? %>
    <span class="pull-right text-babu"><i class="fa fa-check"></i></span>
  <% end %>
</li>
<li class="sidebar-item">
  <%= link_to "Photos", photo_upload_accommodation_path, class: "sidebar-link active" %>
  <% if !@accommodation.photos.blank? %>
    <span id="photo_check" class="pull-right text-babu"><i class="fa fa-check"></i></span>
  <% end %>
</li>
<li class="sidebar-item">
  <%= link_to "Amenities", amenities_accommodation_path, class: "sidebar-link active" %>
  <span class="pull-right text-babu"><i class="fa fa-check"></i></span>
</li>
<li class="sidebar-item">
  <%= link_to "Location", location_accommodation_path, class: "sidebar-link active" %>
  <% if !@accommodation.address.blank? %>
    <span class="pull-right text-babu"><i class="fa fa-check"></i></span>
  <% end %>
</li>
</ul>
<hr/>

<% is_ready = !@accommodation.active && !@accommodation.price.blank? && !@accommodation.listing_name.blank? && !@accommodation.photos.blank? && !@accommodation.address.blank? %>

<%= form_for @accommodation do |f| %>
<%= f.hidden_field :active, value: true %>
<%= f.submit "Publish", id: "publish_button", class: "btn btn-normal btn-block", disabled: !is_ready %>
<% end %>
